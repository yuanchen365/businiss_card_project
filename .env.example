SECRET_KEY=dev-secret-change-me
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback
# 建議包含 contacts.readonly、openid、userinfo.email
GOOGLE_SCOPES=https://www.googleapis.com/auth/contacts,openid,https://www.googleapis.com/auth/userinfo.email

# OCR
VISION_API_KEY=
# tesseract or none
OCR_FALLBACK=tesseract

# Local-only: allow HTTP redirect during OAuth (dev convenience)
OAUTHLIB_INSECURE_TRANSPORT=1

# Stripe 點數方案
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# 第一個價目：例如 5 美元 / 50 張
STRIPE_PRICE_CREDITS=
# 其他價目（可選）：STRIPE_PRICE_CREDITS_1, STRIPE_PRICE_CREDITS_2 ...
STRIPE_PRICE_CREDITS_1=
STRIPE_PRICE_CREDITS_2=
# CREDIT_PACK_TIERS 以 `名片張數:價格` 定義，例如 `50:5,100:10,150:15`
CREDIT_PACK_TIERS=50:5,100:10,150:15
CREDIT_PACK_PRICE=5
